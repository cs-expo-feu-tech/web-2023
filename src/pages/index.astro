---
import BaseLayout from '../layouts/BaseLayout.astro';

import CSECarouselSpeakers from '../components/CSECarousel/home/CSECarouselSpeakers.astro';

import Speakers from '../assets/speakers.json'
import Partners from '../assets/partners.json'

import '../styles/home.css';

// import Speakers from '../components/Speakers.astro';
// import About from '../components/About.astro';
// import Partners from '../components/Partners.astro';

const partners_info = [];

// Enumerate through the partners
Partners.partner_groups.forEach((group) => {
    group.partners.forEach((partner) => {
        partners_info.push({
            src: `/images/partners/${group.path}/${partner.logo}`,
            alt: `Logo of ${partner.name}`,
        });
    });
});
---

<style>
    .cs-expo .tape {
        color: black;
        font-weight: bolder;
        background-image: url("/images/dt4.png");
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        transform: scale(120%);
    }

    .cs-expo .cse-date-sticker {
        position: absolute;
        right: 10%;
        bottom: 20%;
        transform: rotate(16deg);
        padding: 0;

        z-index: 2;
    }

    .devday {
        overflow: hidden;
    }

    .devday .tape {
        color: black;
        font-weight: bolder;
        background-image: url("/images/dt3.png");
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        transform: scale(120%);
    }

    .devday .cse-date-sticker {
        position: absolute;
        left: 10%;
        bottom: 20%;
        transform: rotate(-16deg);
        padding: 0;

        z-index: 2;
    }

    .cse-button {
        text-decoration: none;
        color: white;

        background-image: url("/images/FW_Paper_Black_27.png");
        background-position: center;
        background-repeat: no-repeat;
        background-size: 100%;
        padding: 1rem 2rem;

        mask-image: url("/images/btnmask.png");
        mask-size: 100% 100%;

        transition: transform 0.2s ease;
    }

    .cse-button:hover {
        color: white;
        transform: scale(1.2);
    }

    #speakers {
        background: url('/images/cs_expo_2.png') no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    #sponsors {
        overflow: hidden;
    }

    img.partner {
        width: 128px !important;
        height: 128px;
        object-fit: contain;

        padding: 0.75rem;
        margin: 1rem;
        border-radius: 1rem;

        box-shadow: 0 0 0.5rem 0 rgba(0, 0, 0, 0.25);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    img.partner:hover {
        transform: scale(1.05);
        box-shadow: 0 0 0.5rem 0.25rem rgba(0, 0, 0, 0.25);
    }

</style>

<BaseLayout>
