---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Partners">
  <!-- Start of Banner -->
  <div class="d-flex container flex-wrap">
    <div class="row g-0 justify-content-around align-items-center">
      <div class="mt-5 col-md-5">
        <h1 class="text-white">OUR PARTNERS</h1>
        <p class="text-info">We are delighted to announce that CS EXPO 2023 is made possible by our partnerships with exceptional companies and organizations in the industry. These partners bring valuable knowledge and expertise to the event, ensuring that it is informative, engaging, and impactful. It's an honor to work with them to make this event a success.</p>
      </div>

      <div class="col-md-5 mx-3">
        <img class="w-100" src="https://th.bing.com/th/id/OIP.Xyr9Zw5XAPMmiamYfxaelwHaE8?pid=ImgDet&rs=1" alt="sample-image">
      </div>
    </div>
  </div>
  <!-- End of Banner -->

  <!-- Start of Gold Sponsors -->
  <div class="mt-3 p-5 container">
    <h4 class="text-warning p-3">GOLD SPONSORS</h4>
    <div id="gold-card-group" class="card-group">
      <!-- <div class="py-4 card text-center bg-transparent align-items-center" style="border: none !important;">
        <div class="ratio ratio-1x1 rounded-circle overflow-hidden w-25">
          <img class="" src="https://logopond.com/logos/97c275e2d904133b81678ab0446648d7.png" alt="sample">
        </div>

        <div class="card-body text-white">
          <h4 class="card-title">Company Name</h4>
          <p class="card-text">Facebook</p>
          <p class="card-text">Twitter</p>
        </div>
      </div> -->

    </div>
    <!-- End of Gold Sponsors -->

    <!-- Start of Silver Sponsors -->
    <h4 class="text-secondary p-3">SILVER SPONSORS</h4>
    <!-- End of Silver Sponsors -->

  </div>

  <script>
    // Components
    const goldCardGroup = document.querySelector('#gold-card-group');

    // Fill Gold sponsors
    for (let i = 0; i < 4; i++) {
      const goldCard = document.createElement('div');
      goldCard.classList.add('py-4');
      goldCard.classList.add('card');
      goldCard.classList.add('text-center');
      goldCard.classList.add('bg-transparent');
      goldCard.classList.add('align-items-center');

      goldCard.style.border = 'none';
      goldCard.innerHTML = `
        <div class="ratio ratio-1x1 rounded-circle overflow-hidden w-25">
          <img class="" src="https://logopond.com/logos/97c275e2d904133b81678ab0446648d7.png" alt="sample">
        </div>

        <div class="card-body text-white">
          <h4 class="card-title">Company Name</h4>
          <p class="card-text">Facebook</p>
          <p class="card-text">Twitter</p>
        </div>`;

      goldCardGroup.appendChild(goldCard);
    }
  </script>
</BaseLayout>