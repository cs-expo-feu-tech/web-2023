---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/partners.css";

import CSESponsorContainer from "../components/CSESponsorContainer.astro";
---

<BaseLayout title="Partners">
  <div class="partners-container">
    <!-- Start of Banner -->
    <div id="banner" class="container-fluid d-flex flex-wrap">
      <div class="row g-0 justify-content-center justify-content-lg-end align-items-center">
        <div class="">
          <h1 class="text-white">
            OUR<br />PARTNERS
          </h1>
          <p>
            We are delighted to announce that CS EXPO 2023 is made possible by
            our partnerships with exceptional companies and organizations in the
            industry. These partners bring valuable knowledge and expertise to
            the event, ensuring that it is informative, engaging, and impactful.
            It's an honor to work with them to make this event a success.
          </p>
        </div>
        <div class="col-10 col-md-6 partners-img">
          <img class="w-100" src="src/images/filler.png" />
          <img class="shape" src="src/images/shape_89.png" />
        </div>
      </div>
    </div>
    <!-- End of Banner -->

    <!-- Start of Chain -->
    <div class="spacer"></div>
    <img class="chain" src="src/components/CHAIN.png" />
    <div class="spacer"></div>
    <!-- End of Chain -->

    <!-- Start of Gold Sponsors -->
    <div class="partners-body">
      <CSESponsorContainer bg="/src/components/FW_Paper_Black_27.png" category_name="Gold Sponsors" category_color="#f6d333">
        <!-- <div id="gold-card-group"></div> -->
      </CSESponsorContainer>
      <!-- End of Gold Sponsors -->
      <div class="spacer"></div>
      <!-- Start of Silver Sponsors -->
      <CSESponsorContainer bg="/src/components/FW_Paper_Black_26.png" category_name="Silver Sponsors" category_color="#B8B8B8" />
      <!-- End of Silver Sponsors -->
      <div class="spacer"></div>
      <!-- Start of Bronze Sponsors -->
      <CSESponsorContainer bg="/src/components/FW_Paper_Black_27.png" category_name="Bronze Sponsors" category_color="#BC7836" />
      <!-- End of Bronze Sponsors -->
      <div class="spacer"></div>
      <!-- Start of Major Partners -->
      <CSESponsorContainer bg="/src/components/FW_Paper_Black_26.png" category_name="Major Partners" category_color="#F4B5EA" />
      <!-- End of Major Partners -->
      <div class="spacer"></div>
      <!-- Start of Minor Partners -->
      <CSESponsorContainer bg="/src/components/FW_Paper_Black_27.png" category_name="Minor Partners" category_color="#F4B5EA" />
      <!-- End of Minor Partners -->
      <div class="spacer"></div>
      <!-- Start of Media Partners -->
      <CSESponsorContainer bg="/src/components/FW_Paper_Black_26.png" category_name="Media Partners" category_color="#4F4b88" />
      <!-- End of Media Partners -->
      <div class="spacer"></div>
    </div>
  </div>

  <script>
    // Components
    const goldCardGroup = document.querySelector("#gold-card-group");
    const silverCardGroup = document.querySelector("#silver-card-group");
    const bronzeCardGroup = document.querySelector("#bronze-card-group");
    const majorCardGroup = document.querySelector("#major-card-group");
    const minorCardGroup = document.querySelector("#minor-card-group");
    const mediaCardGroup = document.querySelector("#media-card-group");

    // Fill Gold sponsors
    for (let i = 0; i < 4; i++) {
      const goldCard = document.createElement("div");

      goldCard.classList.add("card");
      goldCard.classList.add("py-4");
      goldCard.classList.add("text-center");
      goldCard.classList.add("bg-transparent");
      goldCard.classList.add("align-items-center");

      // You can change the logo, facebook link, and twitter link here:
      goldCard.style.border = "none";
      goldCard.innerHTML = `
			<div class="ratio ratio-1x1 rounded-circle overflow-hidden w-50">
			<img class="" src="https://logopond.com/logos/97c275e2d904133b81678ab0446648d7.png" alt="sample">
			</div>

			<div class="card-body text-white">
			<h5 style="font-family: AkiraExpandedDemo; font-size: 18px; text-shadow: 1px 1px aqua" class="card-title">Company<br>Name</h5>
			<a href="https://www.youtube.com/watch?v=DKF2-zCNJ0A" class="card-text text-white text-decoration-none">
				<i class='bx bxl-facebook-circle'></i> <span style="color: aqua;">Facebook</span></a><br>
