import groups from "../../assets/groups.json"
export async function getStaticPaths() {
    const pages = Object.keys(groups).map(key => {
        const group = groups[key]

        return {
            slug: group.slug,
            name: group.group_name,
            title: group.title,
            description: group.description,
            photo: group.group_photo,
            members: group.developers,
            avp: group.group_avp
        }
    });

    return pages.map(({slug, name, title, description, photo, members}) => {
        return {
            params: { slug },
            props: { name, title, description, photo, members }
        }
    });
}

const { name, title, description, photo, members } = Astro.props;

