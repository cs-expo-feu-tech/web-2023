---
export interface Props {
    name: string,
    image: string
}

const { name, image } = Astro.props;
---

<style>
    .developer-card{
        border: 24px solid white;
        border-radius: 8px;
        padding: 0;
        margin: 1rem;
    }   
    .card-img-top{
        object-fit: cover;
        width: 100%;
    }
    .card-text{
        background-color: #CACACA;
        font-family: 'DIN Black';
        font-size: 1rem;
        width: 100%;
        text-align: center;
    }
    .ease-anim{
    position: relative;
    opacity: 0;
    }
    .ease-anim.active{
        opacity: 1;
    }
</style>

<p> { name } </p>

